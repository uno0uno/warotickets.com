# =============================================================================
# WAROTICKETS.COM - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env (development) or .env.prod (production)

# =============================================================================
# SHARED CONFIGURATION
# =============================================================================
NUXT_PUBLIC_PUBLIC_KEY_ENCRYPTER="your_public_key"

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3003

# URLs
NUXT_PUBLIC_API_BASE_URL="http://localhost:5002"
NUXT_PUBLIC_SITE_URL="http://localhost:3003"

# Site Configuration
NUXT_PUBLIC_SITE_NAME="WaRo Tickets"
NUXT_PUBLIC_SITE_DESCRIPTION="Plataforma de venta de boleteria y gestion de eventos"
NUXT_PUBLIC_DEFAULT_REDIRECT_URL="/gestion/eventos"

# SEO
NUXT_PUBLIC_SITE_AUTHOR="WaRo Tickets"
NUXT_PUBLIC_SITE_LANG=es
NUXT_PUBLIC_SITE_LOCALE=es_CO
NUXT_PUBLIC_SEO_TITLE="WaRo Tickets - Sistema de Boleteria para Eventos"
NUXT_PUBLIC_SEO_DESCRIPTION="Plataforma de venta de boleteria y gestion de eventos"

# Open Graph
NUXT_PUBLIC_OG_TITLE="WaRo Tickets - Sistema de Boleteria para Eventos"
NUXT_PUBLIC_OG_DESCRIPTION="Plataforma de venta de boleteria y gestion de eventos"
NUXT_PUBLIC_OG_URL=https://warotickets.com
NUXT_PUBLIC_OG_IMAGE=https://warotickets.com/og-image.png

# Twitter
NUXT_PUBLIC_TWITTER_TITLE="WaRo Tickets - Sistema de Boleteria"
NUXT_PUBLIC_TWITTER_DESCRIPTION="Sistema de boleteria para eventos"
NUXT_PUBLIC_TWITTER_SITE="@warotickets"

# Google Tag Manager (Analytics)
NUXT_PUBLIC_GTM_CONTAINER_ID="GTM-XXXXXXX"
